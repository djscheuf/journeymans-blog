<!-- Footer-widgets -->
<div class="footer-widgets">
  <div class="row inside-wrapper">
    <div class="col-1-3">
      <aside>
        <h1 class="widget-title"><%= config.widget ? config.widget.title : theme.widget.title  %></h1>
        <div class="custom-widget-content">
          <% var widget_content = config.widget ? config.widget.content : (config.description || theme.widget.content) %>
          <%- widget_content %>
        </div>
      </aside>
    </div>
    <div class="col-1-3">
      <aside>
        <h1 class="widget-title"><%- __('contact') %></h1>
        <div class="widget-text">
          <%- partial('_partial/social') %>
        </div>
      </aside>
    </div>
    <div class="col-1-3">
      <aside>
        <h2 class="widget-title">Created with <a href="https://hexo.io">Hexo</a></h2>
        <div class="widget-text">
        </div>
      </aside>
    </div>
  </div>
</div>
<!-- Footer -->
<footer class="site-info">
  <p>
    <span><%- config.title %> &copy; <%= (new Date()).getFullYear() %></span>
  </p>
</footer>
