<!-- Featured-widgets -->
<% if(config.featured && config.featured.active) { %>
<% 
    var rand = function(){
        return Math.floor(
            Math.random()
            * config.featured.articles.length
        );
    }

    var idxs = [];
    var temp = rand();
    while(idxs.length < 3){
        if(idxs.indexOf(temp) === -1){
            idxs.push(temp);
        }
        temp = rand();
    }
%>
<div class="footer-widgets">
    <div class="row inside-wrapper">
        <div class="col-1-5">
                <span><b>Featured Articles</b></span>
        </div>
        <% for(var i = 0; i < idxs.length; i++){ %>
            <div class="col-1-5">
                <aside>
                <p><a href="<%- config.featured.articles[idxs[i]].link %>" target="_blank"><b><%= config.featured.articles[idxs[i]].title %></b></a></p>
                <a href="<%- config.featured.articles[idxs[i]].link %>" target="_blank"> Read More</a>
                </aside>
            </div>
          <% } %>
        <div class="col-1-5"></div>
    </div>
  </div>
<%}%>